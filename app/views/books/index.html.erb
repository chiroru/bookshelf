<h2>Listing books</h2>
<p>
<table>
  <tr>
    <th>Name</th>
    <th>Volume</th>
    <th>Description</th>
    <th>Shelf</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</p>
<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.volume %></td>
    <td><%= book.description %></td>
    <td><%= book.shelf.name%></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

